<div class="row registration-page">
  <div class="col-md-6 col-md-offset-3 text-center" style="background-color:rgba(0, 0, 0, 0.5);    margin-top: 6%;padding-bottom: 25px;">
    <h2 style="color: white;">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
       <%= render  "shared/devisemsg" %> 
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email Address" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group remember_me">
          <%= f.check_box :remember_me %> Remember Me
        </div>
      <% end -%>

      <div class="actions">
        <%= link_to "Forgot Password", new_user_password_path, :class => "btn btn-link forgot-password", :style => "color: white;" %>
        <br>
        <%= f.submit "Log in", :class => "btn btn-warning btn-lg  log-in" %>
      </div> 
      <hr>
       <span style="color: white;">Donâ€™t have an account? </span><span style="color: white !important;font-weight: bold;"><%= link_to "Sign Up", new_registration_path(resource_name) %></span>
    <% end %>
  </div>
</div>





