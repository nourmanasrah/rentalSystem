                </div>

                <div class=" col-md-4 checkbox" >
                  <%= f.check_box :is_smoking_allowed, class:"form-checkbox" %> Smoking Allowed
                </div>
                 
               </div>
             </div>
            </div>
        </div>

        <!-- Photos -->
        <div class="tab-pane fade hide" id="tab6">
          <div class="panel panel-default panel-content">
           <div class="panel-body position">
            <h2>Help guests find your place</h2>
            <br/>
            <h5>Travelers will use this information to find a place that’s in the right spot.</h5>
             <div class="row">
              <div class="col-md-4">
                <div class="form-group">              
                  <span class="btn btn-default btn-file">
                    <i class="fa fa-cloud-upload fa-lg"></i> Upload Photos 
                    <%= file_field_tag "images[]", type: :file, multiple: true %>
                  </span>
                </div>    
              </div>
            </div>
            <div id="photos"><%= render 'photos/list' %></div>
            </div>
          </div>
        </div>

        <!-- House Rules & Cancellation -->
        <div class="tab-pane fade hide" id="tab7">
          <div class="panel panel-default panel-content">
            <div class="panel-body position">
              <h2>Set your Home Rules and Cancellation policies </h2>
              <br/>
              <h5>You can set a Rules for renter and explain your policies.</h5>
              <div class="col-md-9">
               <hr>
                 <label>Rules and Restriction</label>
                 <%= f.text_area :home_rules, rows: 10, cols: 25, :placeholder => "Add Rules of using your property.", :class => 'form-control' %>
                 <div class="form-group">
                   <label>Cancellation</label>
                  <%= f.select :cancellation, [["Strict","Strict"],["Moderate","Moderate"],["Flexible","Flexible"]], id: "cancellation", class:"form-control" %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Pricing -->
        <div class="tab-pane fade hide" id="tab8">
          <div class="panel panel-default panel-content">
           <div class="panel-body position">
            <h2>Set price and fees for your space</h2>
            <br/>
            <h5>You can set a price to reflect the space, amenities, and hospitality you’ll be providing.</h5>
            <div class="col-md-9">
              <div class="input-group">
                 <label>Nightly Price</label>
                 <div class="input-group-addon">$</div>
                  <%= f.text_field :nightly_price, id: "nightly-price", class:"form-control",placeholder: 'eg: 100$' %>
               </div>
              <br/>
               <div class="input-group">
                 <label>Weekly Price</label>
                 <div class="input-group-addon">$</div>
                  <%= f.text_field :weekly_price, id: "weekly-price", class:"form-control",placeholder: 'eg: 100$' %>
               </div>
               <br/>
             
                <div class="input-group">
                   <label>Monthly Fee</label><i class="icon-question-sign"></i> 
                   <div class="input-group-addon">$</div>
                    <%= f.text_field :monthly_price, id: "monthly-price", class:"form-control",placeholder: 'eg: 100$' %>
                </div>
                <br/>

                <div class="input-group">
                   <label>Security Deposit</label>
                   <div class="input-group-addon">$</div>
                    <%= f.text_field :security_deposit, id: "security-deposit", class:"form-control",placeholder: 'eg: 100$' %>
                </div>
                <br/>
 
                <div class="input-group">
                   <label> Cleaning Fee</label>
