                </div>

                <div class=" col-md-4 checkbox" >
                  <%= f.check_box :is_hospital, class:"form-checkbox" %> Hospital
                </div>

                <div class=" col-md-4 checkbox" >
                  <%= f.check_box :is_daycare, class:"form-checkbox"%> DayCare
                </div>

                <div class=" col-md-4 checkbox" >
                  <%= f.check_box :is_gas_station, class:"form-checkbox" %> Gas Station
                </div>

                <div class=" col-md-4 checkbox" >
                  <%= f.check_box :is_park, class:"form-checkbox" %> Park
                </div>

                <div class=" col-md-4 checkbox" >
                  <%= f.check_box :is_school, class:"form-checkbox" %> School
                </div>

                 <div class=" col-md-4 checkbox" >
                  <%= f.check_box :is_collage, class:"form-checkbox" %> Collage
                </div>

                 <div class=" col-md-4 checkbox" >
                  <%= f.check_box :is_health_center, class:"form-checkbox" %> Health Center
                </div>

                <div class=" col-md-4 checkbox" >
                  <%= f.check_box :is_coffeeshop, class:"form-checkbox" %> Coffeeshop
                </div>

               </div>
              </div>
           </div>
        </div>

        <!-- Amenities -->
