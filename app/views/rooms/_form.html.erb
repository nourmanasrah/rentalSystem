                    <%= f.text_field :cleaing_fee, id: "cleaing-fee", class:"form-control", placeholder: 'eg: 100$'%>
                </div>
                <br/>
 
                <div class="input-group">
                   <label>Service Fee</label>
                   <div class="input-group-addon">$</div>
                    <%= f.text_field :service_fee, id: "service-fee", class:"form-control", placeholder: 'eg: 100$' %>
                </div>
                <br/>

                <div class="input-group">
                   <label>Basic Fund</label>
                   <div class="input-group-addon">$</div>
                    <%= f.text_field :basic_fund, id: "basic-fund", class:"form-control", placeholder: 'eg: 100$'%>
                </div>
                <br/>
                  </div>
               </div>
             
           </div>
          </div>
